@using Entity.Concrete
@model List<Entry>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Topic</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-12">
                <h2 class="text-center mb-5">@ViewBag.Topic</h2>
                @foreach (Entry entry in Model)
                {
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="d-flex flex-start align-items-center mb-4">
                                <div>
                                    <h6 class="fw-bold text-primary mb-1">@entry.Writer.Username</h6>
                                    <p class="text-muted small mb-0">
                                        @entry.CreatedAt.ToShortDateString()
                                    </p>
                                </div>
                            </div>
                            <p class="mt-3 mb-4 pb-2">
                                @entry.BodyText
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>



