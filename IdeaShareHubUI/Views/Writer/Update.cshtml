@model Entity.Concrete.Writer
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Update Writer</h2>
<br />
@using (Html.BeginForm("Update", "Writer", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Writer ID")
        @Html.TextBoxFor(w => w.Id, new { @class = "form-control", @readonly = "true" })
        <br />
        @Html.Label("Username")
        @Html.TextBoxFor(w => w.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.Username, "", new { @style = "color:red;" })
        <br />
        @Html.Label("Title")
        @Html.TextBoxFor(w => w.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.Title)
        <br />
        @Html.Label("Email")
        @Html.TextBoxFor(w => w.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.Email)
        <br />
        @Html.Label("Password")
        @Html.TextBoxFor(w => w.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.Password)
        <br />
        @Html.Label("Image Link")
        @Html.TextBoxFor(w => w.Image, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.Image)
        <br />
        @Html.Label("About")
        @Html.TextBoxFor(w => w.AboutWriter, new { @class = "form-control" })
        @Html.ValidationMessageFor(w => w.AboutWriter)
        <br />
        <button class="btn btn-info">Save</button>
    </div>
}

